                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_status_not_available_show', { 'id': statusNotAvailable.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_status_not_available_edit', { 'id': statusNotAvailable.id }) }}">edit</a>
