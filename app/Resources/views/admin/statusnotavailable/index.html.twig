    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Datenotavailable</th>
                <th>Amountclose</th>
                <th>Clientclose</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statusNotAvailable in statusNotAvailables %}
            <tr>
                <td><a href="{{ path('admin_status_not_available_show', { 'id': statusNotAvailable.id }) }}">{{ statusNotAvailable.id }}</a></td>
                <td>{% if statusNotAvailable.dateNotAvailable %}{{ statusNotAvailable.dateNotAvailable|date('Y-m-d') }}{% endif %}</td>
