{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zone</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zone.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ zone.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if zone.createdAt %}{{ zone.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if zone.updatedAt %}{{ zone.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_zone_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_zone_edit', { 'id': zone.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
