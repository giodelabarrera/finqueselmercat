{% extends app.request.xmlHttpRequest ? 'admin/ajax_base.html.twig' : 'admin/base.html.twig' %}

{% form_theme delete_form 'admin/form/fields.html.twig' %}

{% block gba_admin_content %}

    <div class="row">
        {# Box #}
        <div class="col-xs-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">Confirmar la eliminación</h3>
                </div>
                <div class="box-body">
                    ¿Está seguro de que desea eliminar el elemento "{{ mediaFile }}" seleccionado?
                </div>
                <div class="box-footer clearfix">
                    {{ form_start(delete_form) }}
                        <button class="btn btn-danger" type="submit"><i class="fa fa-minus-circle"></i> {{ 'admin.action.delete'|trans }}</button>
                        {{ 'admin.word.or'|trans }}
                        <a class="btn btn-success" href="{{ path('admin_media_file_edit', {'id':mediaFile.id}) }}"><i class="fa fa-save"></i> {{ 'admin.action.edit'|trans }}</a>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{% endblock %}

