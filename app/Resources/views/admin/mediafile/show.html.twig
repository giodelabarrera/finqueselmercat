{% extends 'base.html.twig' %}

{% block body %}
    <h1>MediaFile</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mediaFile.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mediaFile.name }}</td>
            </tr>
            <tr>
                <th>Contenttype</th>
                <td>{{ mediaFile.contentType }}</td>
            </tr>
            <tr>
                <th>Contentsize</th>
                <td>{{ mediaFile.contentSize }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ mediaFile.path }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if mediaFile.createdAt %}{{ mediaFile.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if mediaFile.updatedAt %}{{ mediaFile.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_media_file_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_media_file_edit', { 'id': mediaFile.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
