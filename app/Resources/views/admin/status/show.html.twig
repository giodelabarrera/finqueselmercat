{% extends 'base.html.twig' %}

{% block body %}
    <h1>Status</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ status.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ status.slug }}</td>
            </tr>
            <tr>
                <th>Numorder</th>
                <td>{{ status.numOrder }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if status.createdAt %}{{ status.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if status.updatedAt %}{{ status.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_status_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_status_edit', { 'id': status.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
